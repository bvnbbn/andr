<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                       
                                                                 
           
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:layout_marginLeft="@dimen/layout_margin"
        android:clickable="true"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin" android:tag="layout/movie_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/Movie_img"
            android:src="@mipmap/ic_launcher"
            android:padding="@dimen/layout_margin"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/desc_layout"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/desc_layout"
            android:padding="@dimen/layout_margin"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/Movie_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/Movie_img"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Movie_title"
                android:tag="binding_1"          
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/Text_size_head_1"
                tools:text="Theri"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/layout_margin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Movie_ReleaseDate"
                android:textSize="@dimen/Icon_text"
                tools:text="Released on 27-may-2017"
                android:textColor="@color/textColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Movie_Overview"
                android:textSize="@dimen/Text_size_normal"
                tools:text="Theri"
                android:tag="binding_2"              
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/textColor"
                android:layout_marginTop="@dimen/layout_margin"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/favorite"
            android:id="@+id/rating_circle"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/Movie_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_rating"
            android:textSize="@dimen/Icon_text"
            tools:text="22"
            android:tag="binding_3"                  
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/rating_circle"
            app:layout_constraintBottom_toBottomOf="@+id/rating_circle"
            app:layout_constraintLeft_toLeftOf="@+id/rating_circle"
            app:layout_constraintRight_toRightOf="@+id/rating_circle"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
             